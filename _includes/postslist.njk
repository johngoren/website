<ol reversed class="postlist">
{# <ol reversed class="postlist" style="--postlist-index: {{ (postslistCounter or postslist.length) + 1 }}"> #}
{%- for post in projectslist | reverse %}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<a href="{{ post.url }}" class="postlist-link">{% if project.data.title %}{{ project.data.title }}{% else %}<code>{{ project.url }}</code>{% endif %}</a>
		<time class="postlist-date" datetime="{{ project.date | htmlDateString }}">{{ project.date | readableDate("LLLL yyyy") }}</time>
	</li>
{%- endfor %}
</ol>
